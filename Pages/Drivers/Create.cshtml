@page
@model Transporte.Pages.Drivers.CreateModel
@{
}

<h2>Novo Motorista</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="mb-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" name="Id" value="@Model.DriversInfo.Id" />
    </div>
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" name="Name" value="@Model.DriversInfo.Name" />
    </div>
    <div class="mb-3">
        <label class="form-label">CNH</label>
        <input type="text" class="form-control" name="CNH" value="@Model.DriversInfo.CNH" />
    </div>
    <div class="mb-3">
        <label class="form-label">Endereço</label>
        <input type="text" class="form-control" name="Endereco" value="@Model.DriversInfo.Endereco" />
    </div>


    <div class="mb-3">
        <label class="form-label">Contato</label>
        <input type="text" class="form-control" name="Contato" value="@Model.DriversInfo.Contato" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
